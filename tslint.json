{
    "extends": [
        "tslint:recommended",
        "tslint-config-standard"
    ],
    "rulesDirectory": [
        "./app/src"
    ],
    "rules": {
        "object-literal-sort-keys": false,
        "interface-name": [
            true,
            "never-prefix"
        ],
        "no-any": true,
        "completed-docs": true,
        "max-line-length": [
            true,
            {
                "limit": 80,
                "ignore-pattern": "^import"
            }
        ],
        "comment-format": [
            true,
            "check-space",
            "check-uppercase",
            "allow-trailing-lowercase"
        ]
    }
}